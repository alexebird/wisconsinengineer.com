%h1
  Listing users
%table
  %tr
    %th
      Email
    %th
      Password
    %th
      Name
  - @users.each do |user|
    %tr
      %td
        = h user.email
      %td
        = h user.password
      %td
        = h user.name
      %td
        = link_to 'Show', user
      %td
        = link_to 'Edit', edit_user_path(user)
      %td
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New user', new_admin_user_path
